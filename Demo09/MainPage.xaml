        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="10,97,0,0" TextWrapping="Wrap" Text="Karmipuun leveys (W):" VerticalAlignment="Top" SelectionChanged="textBlock_Copy1_SelectionChanged"/>
        <TextBox x:Name="text_kl" HorizontalAlignment="Left" Margin="166,97,0,0" TextWrapping="Wrap" Text="45" VerticalAlignment="Top" RenderTransformOrigin="1.352,0.375" Width="316"/>
        <Button x:Name="button" Content="Laske" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="472" Click="calculate"/>
        <TextBlock x:Name="xx" HorizontalAlignment="Left" Margin="10,173,0,0" TextWrapping="Wrap" Text="Ikkunan pinta-ala:" VerticalAlignment="Top"/>
        <TextBox x:Name="text_ia" HorizontalAlignment="Left" Margin="166,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="1.352,0.375" Width="316"/>
        <TextBlock x:Name="yy" HorizontalAlignment="Left" Margin="10,210,0,0" TextWrapping="Wrap" Text="Lasin pinta-ala:" VerticalAlignment="Top" SelectionChanged="textBlock_Copy_SelectionChanged"/>
        <TextBox x:Name="text_la" HorizontalAlignment="Left" Margin="166,210,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="1.352,0.375" Width="316"/>
        <TextBlock x:Name="zz" HorizontalAlignment="Left" Margin="10,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" >
        	<Run Text="Karmin piiri:"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>
        <TextBox x:Name="text_kp" HorizontalAlignment="Left" Margin="166,247,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="1.352,0.375" Width="316"/>
    </Grid>
</Page>
